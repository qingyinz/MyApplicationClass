<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bk_linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <FrameLayout
        android:id="@+id/bk_fl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

    <TextView
        android:id="@+id/model_editText2"
        android:layout_width="160dp"
        android:layout_height="35dp"
        android:layout_alignTop="@+id/model_textView2"
        android:layout_toEndOf="@+id/model_textView2"
        android:ems="10"
        android:enabled="true"
        android:textIsSelectable="true"
        android:focusable="true"
        android:longClickable="true"
        android:text="1234567786"
        android:textColor="#ffffff"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/model_editText1"
        android:layout_width="160dp"
        android:layout_height="35dp"
        android:layout_alignTop="@+id/model_textView1"
        android:layout_toEndOf="@+id/model_textView1"
        android:ems="10"
        android:enabled="true"
        android:focusable="true"
        android:longClickable="true"
        android:text="1234567786"
        android:textColor="#ffffff"
        android:textIsSelectable="true"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/model_textView1"
        android:layout_width="125dp"
        android:layout_height="35dp"

        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/model_imageView1"
        android:layout_marginTop="207dp"
        android:text="电话号码"
        android:textColor="#ffffff"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/model_textView2"
        android:layout_width="125dp"
        android:layout_height="35dp"

        android:layout_below="@+id/model_editText1"
        android:layout_toStartOf="@+id/model_editText1"
        android:text="QQ号"
        android:textColor="#ffffff"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/model_textView_name"
        android:layout_width="114dp"
        android:layout_height="56dp"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:text="名字"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/model_imageView1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"

        android:layout_alignParentStart="true"
        android:layout_marginBottom="132dp"
        android:layout_marginStart="67dp"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        app:srcCompat="@mipmap/ice_call_phone" />

    <ImageView
        android:id="@+id/model_imageView2"
        android:layout_width="75dp"

        android:layout_height="75dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="141dp"
        android:layout_toEndOf="@+id/model_textView_name"
        app:srcCompat="@mipmap/ice_qq_1" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="110dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        app:srcCompat="@mipmap/huiyuan" />


</RelativeLayout>